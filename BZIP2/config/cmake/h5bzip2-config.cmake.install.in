#-----------------------------------------------------------------------------
# h5bzip2 Config file for compiling against h5bzip2 install directory
#-----------------------------------------------------------------------------

get_filename_component (SELF_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
get_filename_component(_IMPORT_PREFIX "${SELF_DIR}" PATH)
get_filename_component(_IMPORT_PREFIX "${_IMPORT_PREFIX}" PATH)
if (NOT WIN32)
  get_filename_component(_IMPORT_PREFIX "${_IMPORT_PREFIX}" PATH)
endif (NOT WIN32)

set (H5BZ2_INCLUDE_DIR "${_IMPORT_PREFIX}/include")

#-----------------------------------------------------------------------------
# Version Strings
#-----------------------------------------------------------------------------
set (H5BZ2_VERSION_STRING @H5BZ2_VERSION_STRING@)
set (H5BZ2_VERSION_MAJOR  @H5BZ2_VERSION_MAJOR@)
set (H5BZ2_VERSION_MINOR  @H5BZ2_VERSION_MINOR@)

#-----------------------------------------------------------------------------
# Don't include targets if this file is being picked up by another
# project which has already build h5bzip2 as a subproject
#-----------------------------------------------------------------------------
if (NOT TARGET "@H5BZ2_PACKAGE@")
  include (${SELF_DIR}/@H5BZ2_PACKAGE@@H5BZ2_PACKAGE_EXT@-targets.cmake)
  set (BZ2_LIBRARIES "@H5BZ2_LIBRARIES_TO_EXPORT@")
endif (NOT TARGET "@H5BZ2_PACKAGE@")
