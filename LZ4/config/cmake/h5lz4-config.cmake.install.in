#-----------------------------------------------------------------------------
# h5lz4 Config file for compiling against h5lz4 install directory
#-----------------------------------------------------------------------------

get_filename_component (SELF_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
get_filename_component(_IMPORT_PREFIX "${SELF_DIR}" PATH)
get_filename_component(_IMPORT_PREFIX "${_IMPORT_PREFIX}" PATH)
if (NOT WIN32)
  get_filename_component(_IMPORT_PREFIX "${_IMPORT_PREFIX}" PATH)
endif (NOT WIN32)

set (H5LZ4_INCLUDE_DIR "${_IMPORT_PREFIX}/include")

#-----------------------------------------------------------------------------
# Version Strings
#-----------------------------------------------------------------------------
set (H5LZ4_VERSION_STRING @H5LZ4_VERSION_STRING@)
set (H5LZ4_VERSION_MAJOR  @H5LZ4_VERSION_MAJOR@)
set (H5LZ4_VERSION_MINOR  @H5LZ4_VERSION_MINOR@)

#-----------------------------------------------------------------------------
# Don't include targets if this file is being picked up by another
# project which has already build h5LZ4 as a subproject
#-----------------------------------------------------------------------------
if (NOT TARGET "@H5LZ4_PACKAGE@")
  include (${SELF_DIR}/@H5LZ4_PACKAGE@@H5LZ4_PACKAGE_EXT@-targets.cmake)
  set (LZ4_LIBRARIES "@H5LZ4_LIBRARIES_TO_EXPORT@")
endif (NOT TARGET "@H5LZ4_PACKAGE@")
