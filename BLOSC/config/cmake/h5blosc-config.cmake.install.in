#-----------------------------------------------------------------------------
# h5blosc Config file for compiling against h5blosc install directory
#-----------------------------------------------------------------------------

get_filename_component (SELF_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
get_filename_component(_IMPORT_PREFIX "${SELF_DIR}" PATH)
get_filename_component(_IMPORT_PREFIX "${_IMPORT_PREFIX}" PATH)
if (NOT WIN32)
  get_filename_component(_IMPORT_PREFIX "${_IMPORT_PREFIX}" PATH)
endif (NOT WIN32)

set (H5BLOSC_INCLUDE_DIR "${_IMPORT_PREFIX}/include")

#-----------------------------------------------------------------------------
# Version Strings
#-----------------------------------------------------------------------------
set (H5BLOSC_VERSION_STRING @H5BLOSC_VERSION_STRING@)
set (H5BLOSC_VERSION_MAJOR  @H5BLOSC_VERSION_MAJOR@)
set (H5BLOSC_VERSION_MINOR  @H5BLOSC_VERSION_MINOR@)

#-----------------------------------------------------------------------------
# Don't include targets if this file is being picked up by another
# project which has already build h5blosc as a subproject
#-----------------------------------------------------------------------------
if (NOT TARGET "@H5BLOSC_PACKAGE@")
  include (${SELF_DIR}/@H5BLOSC_PACKAGE@@H5BLOSC_PACKAGE_EXT@-targets.cmake)
  set (BLOSC_LIBRARIES "@H5BLOSC_LIBRARIES_TO_EXPORT@")
endif (NOT TARGET "@H5BLOSC_PACKAGE@")
